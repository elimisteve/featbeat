!!!
%html
  %head
    %title FeatBeat
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag "http://twitter.github.com/bootstrap/assets/css/bootstrap-1.1.1.min.css"
    = stylesheet_link_tag 'compiled/main.css'

    = javascript_include_tag 'jquery.1.6.2.min.js'
    = javascript_include_tag :all
    = csrf_meta_tag
  %body
    .container-fluid
      .content
        .sidebar{ :style => 'float: right' }
          = render :partial => 'layouts/sidebar', :locals => {:rollups => @rollups}
        = yield
